# ==============================================
# SATRIA Credit Risk Analysis System
# Environment Configuration Template
# ==============================================

# Application Configuration
NEXT_PUBLIC_APP_NAME=SATRIA
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# API Configuration - Google Cloud Run
# ==============================================

# FastAPI Backend (Google Cloud Run)
NEXT_PUBLIC_API_BASE_URL=your-endpoint-url
NEXT_PUBLIC_API_STAGING_URL=your-endpoint-url
NEXT_PUBLIC_API_KEY=your-backend-api-key-here

# API Timeouts (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=60000
NEXT_PUBLIC_UPLOAD_TIMEOUT=300000

# ==============================================
# ML Services Endpoints (Google Cloud Run)
# ==============================================

# SARANA Module (OCR & NLP)
NEXT_PUBLIC_SARANA_API_URL=your-endpoint-url
SARANA_API_KEY=your-sarana-api-key

# PRABU Module (Credit Scoring)
NEXT_PUBLIC_PRABU_API_URL=your-endpoint-url
PRABU_API_KEY=your-prabu-api-key

# SETIA Module (Sentiment Analysis)
NEXT_PUBLIC_SETIA_API_URL=your-endpoint-url
SETIA_API_KEY=your-setia-api-key

# ==============================================
# Firebase Configuration (Database Only)
# ==============================================

# Firebase Web App Config (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ==============================================
# Cloudflare R2 Configuration (File Storage)
# ==============================================

# R2 Credentials (Server-side only)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=satria-documents
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com

# ==============================================
# AI Services
# ==============================================

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# ==============================================
# System Configuration
# ==============================================

# Maintenance mode (set to true to enable maintenance page)
MAINTENANCE_MODE=false

# ==============================================
# Development Tools
# ==============================================

# Enable debug mode
DEBUG=true

# Database logging
DB_LOGGING=true

# API request logging
API_LOGGING=true
